pipeline { 
    agent any

    tools {
      maven 'maven 3.9.8'
    }

    stages{ 
        stage('build'){ 
            when {
                 chengeset "**/worker/**"
            } 
            steps{ 
                echo 'Compiling worker app'
                dir('worker'){ 
                  sh 'mvn compile' 
                } 
            } 
        } 
        stage('test'){ 
            when {
                 chengeset "**/worker/**"
            } 
            steps{ 
                echo 'Running Unit Tests on worker app' 
                dir('worker') {
                  sh 'mvn clean test'
                }
            } 
        } 
        stage('package'){ 
            when {
                 branch 'master'
                 chengeset "**/worker/**"
            } 
            steps{ 
                echo 'Packaging worker app'
                dir('worker') {
                  sh 'mvn package -DskipTests'
                  archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }
            } 
        } 
    }
    post{ 
        always{ 
            echo 'Building multibrach pipeline for worker is completed..'
        }
    }

}
